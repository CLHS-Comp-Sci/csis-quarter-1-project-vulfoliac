{
    "manifest_version": 2,
    "name": "Livestream Lurker",
    "version": "1.0",
    "description": "Shows all your followed streamers from Twitch and YouTube in one place.",
    "permissions": [
    "identity",
    "storage",
    "https://api.twitch.tv/*",
    "https://id.twitch.tv/*",
    "https://www.googleapis.com/*",
    "https://accounts.google.com/*"
    ],
    "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Livestream Lurker"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "livestreamlurkerapp@gmail.com"
        }
    }
}
